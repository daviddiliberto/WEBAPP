html
  background: #272822

body
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif
  font-size: 14px
  line-height: 1.4em
  background: #272822
  color: #000

ul
  list-style-type: none

#top
  background-color: #1F201B
  color: white
  font: 36px Arial
  font-weight:bold
  letter-spacing: 1px
  margin-bottom: 20px
  padding: 10px
  top: 0
  width: 100%
  margin-bottom: 20px

#top-nav
  width: 600px
  margin: auto

#logo
  font-size: 36px
  font-weight: bold
  text-align: center
  color: #6BD6EA
  display:inline

#todo-app
  width: 600px
  margin: 0 auto 40px

h2
  font-size: 36px
  font-weight: bold
  text-align: left
  color: white

#new-todo-view
  position: relative

  input
    width: 520px
    color: white
    background: #1F201B
    border-radius: 30px
    font-size: 20px
    font-weight: 500
    font-family: inherit
    letter-spacing: .5px
    line-height: 1.4em
    border: 1px solid #1F201B
    outline: none
    padding: 10px 40px
    box-shadow: rgba(0, 0, 0, 0.2) 0 1px 2px 0 inset
    background: url("../images/toolbar_find.png") no-repeat 10px 10px #1F201B

  input::-webkit-input-placeholder
    font-style: italic

  .ui-tooltip-top
    display: none
    position: absolute
    z-index: 999
    width: 170px
    left: 50%
    margin-left: -85px
    background: #404041

#todos
  margin-top: 10px
  color: white
  padding-left: 0
  

  li
    border-bottom: 5px solid #404041
    background: #2B2C27
    padding: 10px 10px 10px 0
    position: relative
    font-size: 16px
    font-weight: 500
    line-height: 1.1em
    letter-spacing: 0.5px

  li:after
    content: "\0020"
    display: block
    height: 0
    clear: both
    overflow: hidden
    visibility: hidden
    background: #2B2C27

  li.editing
    padding: 0
    border-bottom: 0
    width: 160 + 120px

  .editing .display, .edit
    display: none

  .editing
    .edit
      display: block

    input
      width: 444px
      font-size: 24px
      font-family: inherit
      margin: 0
      line-height: 1.6em
      border: 1px solid #999
      outline none
      padding: 10px 7px 0px 27px
      box-shadow: rgba(0, 0, 0, 0.2) 0 1px 2px 0 inset

  .check
    position: relative
    top: 9px
    margin: 0 10px 0 7px
    float left

  .done .todo-content
    text-decoration none
    color: #777

  .todo-destroy
    position: absolute
    right: 20px
    top: 40px
    display: none
    cursor: pointer
    width: 20px
    height: 20px
    background: url("../images/destroy.png") no-repeat 0 0

  li:hover .todo-destroy
    display: block

  .todo-destroy:hover
    background-position: 0 -20px

#artistname
  font-size: 12px
  padding-left: 30px
  display: inline

  a
    color: #A6E22E
    text-decoration: none
  
  a:hover
    border-bottom: 2px solid #A6E22E

#album
  font-size:12px
  margin-left: 10px
  display:inline

  a
    color: #A6E22E
    text-decoration: none

  a:hover
     border-bottom: 2px solid #A6E22E


#noartwork
  float:left
  margin:0px 10px 0px 10px

p
  display:inline
  font-size:12px
  color:#666

#stats-view:after
  content: "\0020"
  display: block
  height: 0
  clear: both
  overflow: hidden
  visibility: hidden

#stats-view
  margin-top: 10px
  color: #777

  .todo-count
    float left

  .todo-count .number
    font-weight: bold
    color: #A6E22E

  .todo-clear
    float: right
    text-decoration: underline
    cursor: pointer

  .todo-clear
    a
      color: #777
      font-size: 12px

    a:visited
      color: #777

    a:hover
      color: #336699

#instructions
  width: 520px
  margin: 10px auto
  color: #777
  text-shadow rgba(200, 210, 230, 0.8) 0 1px 0
  text-align: center

  a
    color: #369

#footer
  width: 520px
  margin: 30px auto
  color: white
  text-align: center
  font-size: 11px

  span, a

  a
    color: #A6E22E
    text-decoration: none

  a:hover
     border-bottom: 2px solid #A6E22E

.ui-tooltip:after, .ui-tooltip-top:after, .ui-tooltip-right:after, .ui-tooltip-bottom:after, .ui-tooltip-left:after
  content: "\25B8"
  display: block
  font-size: 2em
  height: 0
  line-height: 0
  position: absolute

.ui-tooltip:after, .ui-tooltip-bottom:after
  color: #2a2a2a
  bottom 0
  left: 1px
  text-align: center
  text-shadow 1px 0 2px #000
  transform: rotate(90deg)
  width: 100%

.ui-tooltip-top:after
  bottom auto
  color: #404041
  left: -2px
  top: 0
  text-align: center
  text-shadow none
  transform: rotate(-90deg)
  width: 100%

.ui-tooltip-right:after
  color: #222
  right -0.375em
  top: 50%
  margin-top: -.05em
  text-shadow 0 1px 2px #000
  transform: rotate(0)

.ui-tooltip-left:after
  color: #222
  left: -0.375em
  top: 50%
  margin-top: .1em
  text-shadow 0 -1px 2px #000
  transform: rotate(180deg)

.ui-tooltip, .ui-tooltip-top, .ui-tooltip-right,
.ui-tooltip-bottom, .ui-tooltip-left
  color: #FFF
  cursor: normal
  display: inline-block
  font-size: 12px
  font-family: arial
  padding: 0.5em 1em
  position: relative
  text-align: center
  text-shadow: 0 -1px 1px #111
  border-radius: 4px
  box-shadow: 0 1px 2px #000\, inset 0 0 0 1px #222\, inset 0 2px #666666\, inset 0 -2px 2px #444
  background-color: #3b3b3b
  background-image: -moz-linear-gradient(top, #555, #222)
  background-image: -webkit-gradient(linear, left: top, left: bottom, color-stop(0, #555), color-stop(1, #222))
  filter: 'progid:DXImageTransform.Microsoft.gradient(startColorStr=#555,EndColorStr=#222)'
  -ms-filter: 'progid:DXImageTransform.Microsoft.gradient(startColorStr=#555,EndColorStr=#222)'

